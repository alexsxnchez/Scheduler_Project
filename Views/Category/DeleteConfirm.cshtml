@model Scheduler_Project.Models.CategoryDto
<link rel="stylesheet" href="~/Content/Category/category.css" type="text/css" />
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Confirm Delete "@Html.DisplayFor(model => model.CategoryName)"</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h5>Once it is deleted it can't be undone. All Projects will be deleted as well.</h5>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Category", new { id = Model.CategoryID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="delete__button" /> |
            @Html.ActionLink("Back to List", "List", "Category", new { @class = "back__button" })
        </div>
    }
</div>
