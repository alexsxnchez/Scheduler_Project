@model Scheduler_Project.Models.ViewModels.ShowCategory

@{
    ViewBag.Title = "Details";
}

<h2>Category</h2>

<div>
    <h4>Project Details</h4>
    <p>
        <a href="/Project/Create" class="button btn btn-success">Add A Project</a>
    </p>
    <hr />
    @foreach (var project in Model.CategoryProjects)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Project Due Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.ActionLink(project.ProjectName, "Details", "Project", new { id = project.ProjectID }, new { })
                    </td>
                    <td>
                        @Html.ActionLink(project.ProjectDate, "Details", "Project", new { id = project.ProjectID }, new { })
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
<p>
    @Html.ActionLink("Back to List", "List")
</p>
