@model IEnumerable<Scheduler_Project.Models.CategoryDto>
@{
    ViewBag.Title = "List";
}

<h2 class="text-center">Category List</h2>

<p>
    @Html.ActionLink("Add A Category", "Create", "Category", new { @class = "bttn-create" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="background-color:@Html.DisplayFor(modelItem => item.CategoryColor); width:5px;"></td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.CategoryID }, new { @class = "text-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "text-detail" }) |
                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.CategoryID }, new { @class = "text-alert" })
            </td>
        </tr>
    }

</table>

