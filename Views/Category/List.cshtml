@model IEnumerable<Scheduler_Project.Models.CategoryDto>

@{
    ViewBag.Title = "List";
}

<h2>Category List</h2>

<p>
    @Html.ActionLink("Add A Category", "Create", "Category", new { @class = "button btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "text-warning" }) |
                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.CategoryID }, new { @class="text-danger" })
            </td>
        </tr>
    }

</table>
